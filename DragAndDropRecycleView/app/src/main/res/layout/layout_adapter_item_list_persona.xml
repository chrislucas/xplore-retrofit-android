<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="0sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:contentPadding="10sp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="8sp"
    android:layout_marginRight="8sp"
    android:layout_marginTop="10sp">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:background="@color/light_gray"
        android:columnOrderPreserved="true"
        android:orientation="vertical"
        android:useDefaultMargins="true">
        <ImageView
            android:id="@+id/image_persona"
            android:layout_margin="0sp"
            android:layout_height="match_parent"
            android:paddingTop="15sp"
            android:paddingBottom="15sp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_gravity="center"
            android:src="@drawable/online_support" />
        <TextView
            android:id="@+id/persona_name"
            android:layout_row="0"
            android:layout_column="1"
            />
        <TextView
            android:id="@+id/persona_email"
            android:layout_row="1"
            android:layout_column="1"
            />
        <TextView
            android:id="@+id/persona_phone"
            android:layout_row="2"
            android:layout_column="1"
            />
    </GridLayout>
</android.support.v7.widget.CardView>

